<h1>Task name: <%= @task.title %></h1>
<h2>Task details: <%= @task.details %></h2>
<h2>Completed: <%= @task.completed %></h2>

<%= link_to "back to task list", tasks_path %>
<%= link_to "edit this task", edit_task_path(@task) %>
<%= link_to "delete this task", task_path(@task), method: :delete, data: { confirm: 'Are you sure' } %>